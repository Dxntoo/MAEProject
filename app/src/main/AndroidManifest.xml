<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.etrite">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.etrite">
        <activity android:name=".RecipeActivity"></activity>
        <activity android:name=".RoutineActivity" />
        <activity android:name=".ChatroomActivity" />
        <activity
            android:name=".AddFoodItemActivity"
            android:label="@string/title_activity_add_food_item"
            android:theme="@style/Theme.etrite.NoActionBar" />
        <activity android:name=".AddNewMealActivity" />
        <activity android:name=".FoodItemActivity" />
        <activity android:name=".ProfileActivity" />
        <activity android:name=".UserProfileActivity" />
        <activity android:name=".MainActivity" />
        <activity android:name=".ForgotPasswordActivity" />
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".RegisterActivity" />
        <activity
            android:name=".Dashboard"
            android:label="@string/title_activity_dashboard" />
        <activity android:name=".LoginActivity" />
    </application>

</manifest>